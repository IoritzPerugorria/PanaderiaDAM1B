<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controladores.ControladorVP">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox prefHeight="153.0" prefWidth="960.0">
        <Label prefHeight="92.0" prefWidth="366.0" text="Panaderia">
            <font>
                <Font size="69.0" />
            </font>
        </Label>
    </HBox>
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab text="Tienda">
            <AnchorPane>
                <ScrollPane fx:id="scrollTienda" fitToHeight="true" fitToWidth="true" layoutX="15.0" layoutY="15.0" pannable="true" vbarPolicy="ALWAYS">
                    <VBox fx:id="Tienda" />
                </ScrollPane>
            </AnchorPane>
        </Tab>

        <Tab text="Almacen">
            <AnchorPane>
            <Button fx:id="anadirCant" mnemonicParsing="false" onAction="#anadirStock" text="Añadir stock" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="10.0" />
            <Button fx:id="anadirIngre" mnemonicParsing="false" onAction="#anadir" text=" Añadir ingrediente" AnchorPane.leftAnchor="120.0" AnchorPane.topAnchor="10.0" />
                <ScrollPane fx:id="scrollAlmacen" fitToHeight="true" fitToWidth="true" layoutX="15.0" layoutY="15.0" pannable="true" vbarPolicy="ALWAYS" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="50.0">
                    <VBox fx:id="Almacen" />
                </ScrollPane>
            </AnchorPane>

        </Tab>

        <Tab text="Cocina">
            <AnchorPane>
                <Button mnemonicParsing="false" text="Añadir nueva receta" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="10.0" />
                <ScrollPane fx:id="scrollCocina" fitToHeight="true" fitToWidth="true" layoutX="15.0" layoutY="15.0" pannable="true" vbarPolicy="ALWAYS" AnchorPane.topAnchor="50.0">
                    <VBox fx:id="Cocina" />
                </ScrollPane>
            </AnchorPane>

        </Tab>
    </TabPane>
</VBox>
